// Custom styles.
// 页面整体设置（背景、字体颜色、行间距）
body {
  background-image: url("/images/Vincent.jpg");
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-position: 50% 50%;
  background-size: cover;
  line-height: 1.5;
}
// 页面留白更改
.header-inner {
  padding-top: 0px;
  padding-bottom: 0px;
}
.posts-expand {
  padding-top: 0px;
}
.posts-expand .post-meta {
  margin: 3px 0px 5px 0px;
}
.post-button {
  margin-top: 0px;
}
.main {
  padding-bottom: 125px;
  padding-top: 1px;
  box-shadow: 0 0 10px 0 rgba(0,0,0,.5);
  background-color: rgba(0,0,0,0.35);
}
// 最顶部加载条
.headband {
  height: 1.5px;
  background: rgba(255, 255, 255, 0);
  background-image: linear-gradient(90deg, #F79533 0%, #F37055 15%, #EF4E7B 30%, #A166AB 44%, #5073B8 58%, #1098AD 72%, #07B39B 86%, #6DBA82 100%);
}
// 顶栏宽度
.container .header-inner {
  width: 100%;
}

// 渐变菜带，CSS代码copy自https://githubuniverse.com
.site-meta {
  margin-left: 0px;
  text-align: center;
  //background-image: linear-gradient(90deg, #F79533 0%, #F37055 15%, #EF4E7B 30%, #A166AB 44%, #5073B8 58%, #1098AD 72%, #07B39B 86%, #6DBA82 100%);
}
// 站点名背景
.brand{
  background: rgba(255, 255, 255, 0);
}
// 站点名字体
.site-title {
  font-size: 28px;
  font-family: 'Comic Sans MS', sans-serif;
  color: #fff;
}
// 站点子标题
.site-subtitle{
  margin: 0px;
  padding: 10px;
  height: 61px;
  font-size: 15px;
  font-family: 'Comic Sans MS', sans-serif;
  color: rgb(255, 255, 255);
  border-bottom-width: 3px;
  border-bottom-style: solid;
  border-bottom-color: rgba(255, 118, 0, 0.75);
  box-shadow: 0px 10px 10px 0px rgba(0, 0, 0, 0.15);
}
// 菜单
.menu {
  text-align: center;
  margin-top: 0px;
  margin-bottom: 0px;
  padding: 10px;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0px 10px 10px 0px rgba(0, 0, 0, 0.5);
  font-family: 'Comic Sans MS', sans-serif;
}
.site-nav {
  position: relative;
}
// 菜单超链接字体大小
.menu .menu-item a {
  font-size: 14px;
  color: rgb(15, 46, 65);
  border-radius: 4px;
}
// 菜单超链接样式
.menu .menu-item a:hover {
  border-bottom-color: rgba(255, 118, 0, 0);
}
// 移动端左上角菜单按钮
.site-nav-toggle {
  top: 20px;
  left: 10px;
}
.btn-bar {
  background: rgb(255, 255, 255);
}
// 移动端菜单
@media (max-width: 767px) {
  .menu {
    text-align: center;
  }
  .site-nav {
    top: initial;
    background: rgba(255, 255, 255, 0.75);
    border-top: none;
    border-bottom: none;
  }
}
// 文章标题字体大小
.posts-expand .post-title {
  font-size: 26px;
}
// 文章标题颜色
.posts-expand .post-title-link {
  color: rgb(0, 0, 0);
}
// 文章标题动态效果
.posts-expand .post-title-link::before {
  background-color: rgb(255, 118, 0);
  background-image: linear-gradient(90deg, #F79533 0%, #F37055 15%, #EF4E7B 30%, #A166AB 44%, #5073B8 58%, #1098AD 72%, #07B39B 86%, #6DBA82 100%);
}
// 文章元数据（site-meta）字体
.posts-expand .post-meta {
  font-size: 11px;
  //color: #ccc;
}
// 文章描述description
.posts-expand .post-meta .post-description {
  color: rgb(255, 255, 255);
}
// 主页文章添加阴影效果
.post {
  margin-top: 50px;
  padding: 45px 36px 36px;
  border-radius: 3px;
  box-shadow: 0 0 50px 0 rgba(0,0,0,.5);
  background-color: #fff;
  margin-bottom: 50px;
  border-radius: 3px;
}

// 阅读更多按钮样式
.post-button .btn {
  color: rgb(255, 255, 255);
  background-color: rgba(134, 187, 232, 0.5);
  margin: 3px;
  border-radius: 3px;
  font-size: 15px;
  text-decoration: none;
  border: 1.5px solid rgba(0,0,0,0.35)
  box-shadow: inset 0px 0px 10px 0px rgba(0, 0, 0, 0.35);
}
.post-button .btn:hover {
  color: rgb(255, 255, 255);
  background-color: rgba(134, 187, 232, 0.75);
  margin: 3px;
  border-radius: 3px;
  text-decoration: none;
  border: 1.5px solid rgba(0,0,0,0.35)
  //background-image: linear-gradient(90deg, #F79533 0%, #F37055 15%, #EF4E7B 30%, #A166AB 44%, #5073B8 58%, #1098AD 72%, #07B39B 86%, #6DBA82 100%);
}
// 去除文章之间的分割线
.posts-expand .post-eof {
  margin-top: 0px;
  margin-right: 0px;
  margin-bottom: 0px;
  margin-left: 0px;
  background: rgba(255, 255, 255, 0);
}
// 页面底部横线
.pagination {
  border: none;
  margin: 15px 0px;
}
// 页面底部页码
.pagination .page-number.current {
  //border-radius: 100%;
  box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.5);
  background: rgba(255, 255, 255, 0.35);
}

.pagination .prev, .pagination .next, .pagination .page-number {
  margin-bottom: 10px;
  border: none;
  color: #fff;
  border-bottom-color: rgb(5, 147, 211);
}

// 页脚
.footer {
  background: rgba(255, 255, 255, 0.75);
  font-size: 13px;
  color: rgb(0, 0, 0);
  border-top-width: 3px;
  border-top-style: solid;
  border-top-color: rgba(255, 118, 0, 0.75);
  padding-top: 0px;
  position: absolute;
  left: 0;
  bottom: 0;
  box-shadow: 0px -10px 10px 0px rgba(0, 0, 0, 0.15);
}
// 超链接样式
a {
  color: rgb(5, 147, 211);
  border-bottom-color: rgb(5, 147, 211);
}
a:hover {
  color: rgb(255, 118, 0);
  border-bottom-color: rgb(255, 118, 0);
}
// 引用样式
blockquote {
  padding-top: 3px;
  padding-right: 25px;
  padding-bottom: 3px;
  padding-left: 25px;
  color: rgba(255, 255, 255, 0.85);
  border-left: 5px solid rgb(255, 118, 0);
}
// 分割线样式
hr {
  margin-top: 10px;
  margin-right: 0px;
  margin-bottom: 10px;
  margin-left: 0px;
  background-color: rgba(255, 118, 0, 0.75);
  background-image: repeating-linear-gradient(-45deg, rgba(255, 255, 255, 0.75), rgba(255, 255, 255, 0.75) 4px, transparent 4px, transparent 8px);
  height: 3px;
}
// 表格样式
table {
  background-color: rgba(255, 255, 255, 0.9);
  color: rgba(0, 0, 0, 0.9);
  border: 1px solid rgba(221, 221, 221, 0.9);
}
table>tbody>tr:nth-of-type(odd) {
  background-color: rgba(249, 249, 249, 0.9);
}
table>tbody>tr:hover {
  background-color: rgba(245, 245, 245, 0.9);
}
th, td {
  border-bottom: 3px solid rgba(221, 221, 221, 0.9);
  border-right: 1px solid rgba(238, 238, 238, 0.9);
}
